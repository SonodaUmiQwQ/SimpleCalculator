<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:layout_gravity="center">

    <TextView
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="50sp"
        android:id="@+id/textResult"
        android:gravity="end"/>

    <Button
        android:text="AC"
        android:textSize="30sp"
        android:id="@+id/ac" />
    <Button
        android:text="("
        android:textSize="30sp"
        android:id="@+id/left" />
    <Button
        android:text=")"
        android:textSize="30sp"
        android:id="@+id/right" />
    <Button
        android:id="@+id/backspace"
        android:text="B"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/one"
        android:text="1"
        android:textSize="30sp" />
    <Button
        android:id="@+id/two"
        android:text="2"
        android:textSize="30sp" />
    <Button
        android:id="@+id/three"
        android:text="3"
        android:textSize="30sp" />
    <Button
        android:id="@+id/plus"
        android:text="+"
        android:textSize="30sp" />
    <Button
        android:id="@+id/four"
        android:text="4"
        android:textSize="30sp" />
    <Button
        android:id="@+id/five"
        android:text="5"
        android:textSize="30sp" />
    <Button
        android:id="@+id/six"
        android:text="6"
        android:textSize="30sp" />
    <Button
        android:id="@+id/minus"
        android:text="-"
        android:textSize="30sp" />
    <Button
        android:id="@+id/seven"
        android:text="7"
        android:textSize="30sp" />
    <Button
        android:id="@+id/eight"
        android:text="8"
        android:textSize="30sp" />
    <Button
        android:id="@+id/nine"
        android:text="9"
        android:textSize="30sp" />
    <Button
        android:id="@+id/multiply"
        android:text="*"
        android:textSize="30sp" />
    <Button
        android:id="@+id/point"
        android:text="."
        android:textSize="30sp" />
    <Button
        android:id="@+id/zero"
        android:text="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:textSize="30sp" />
    <Button
        android:id="@+id/divide"
        android:text="/"
        android:textSize="30sp" />
    <Button
        android:id="@+id/equal"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:text="="
        android:textSize="30sp"/>


</GridLayout>
